        </createTable>
        <addForeignKeyConstraint baseTableName="doc_condreport_binding_value" baseColumnNames="property"
                                 constraintName="fk_doc_condreport_binding_value_property"
                                 referencedTableName="doc_condreport_binding_property" referencedColumnNames="identifier"/>
        <createIndex tableName="doc_condreport_binding_value" indexName="idx_doc_condreport_binding_value_property">
