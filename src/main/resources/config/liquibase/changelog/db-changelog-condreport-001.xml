        <addForeignKeyConstraint baseTableName="doc_condreport_binding" baseColumnNames="value" constraintName="fk_doc_condreport_binding_value"
                                 referencedTableName="doc_condreport_binding_value" referencedColumnNames="identifier"/>
        <addForeignKeyConstraint baseTableName="doc_condreport_binding" baseColumnNames="detail" constraintName="fk_doc_condreport_binding_detail"
                                 referencedTableName="doc_condreport_detail" referencedColumnNames="identifier"/>
        <createIndex tableName="doc_condreport_binding" indexName="idx_doc_condreport_binding_property">
