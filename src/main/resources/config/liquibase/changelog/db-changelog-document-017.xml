<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Changeset du module Document -->
    <changeSet id="pgcn-document-17" author="progilone">

        <addColumn tableName="doc_unit">
            <column name="export_data" type="varchar(191)"></column>
        </addColumn>

		<createTable tableName="doc_export_data">
            <column name="identifier" type="varchar(191)">
                <constraints primaryKey="true" nullable="false" />
            </column>
			<!-- Lien technique -->
            <column name="doc_unit" type="varchar(191)" />
			<!-- Données techniques auto -->
            <column name="version" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(191)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(191)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

		<createTable tableName="doc_export_property">
            <column name="identifier" type="varchar(191)">
                <constraints primaryKey="true" nullable="false" />
            </column>
			<!-- Données -->
			<column name="value" type="text" />
			<column name="language" type="varchar(255)" />
			<column name="rank" type="integer"/>
			<!-- Lien technique -->
			<column name="type" type="varchar(191)" />
            <column name="record" type="varchar(191)" />
			<!-- Données techniques auto -->
            <column name="version" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(191)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(191)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

		<addForeignKeyConstraint baseColumnNames="export_data" baseTableName="doc_unit" constraintName="fk_doc_unit_exp_data"
            referencedColumnNames="identifier" referencedTableName="doc_export_data" />
        <addForeignKeyConstraint baseColumnNames="type" baseTableName="doc_export_property"
			constraintName="fk_doc_export_property_type"
            referencedColumnNames="identifier" referencedTableName="doc_property_type" />
		<addForeignKeyConstraint baseColumnNames="record" baseTableName="doc_export_property"
			constraintName="fk_doc_export_property"
            referencedColumnNames="identifier" referencedTableName="doc_export_data" />
    </changeSet>
</databaseChangeLog>
