<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="pgcn-add-missing-columns-to-conf_omeka-table" author="persee">

        <addColumn tableName="conf_omeka">
            <column name="omekas" type="boolean"/>
        </addColumn>
        <addColumn tableName="conf_omeka">
            <column name="sftp" type="boolean"/>
        </addColumn>

    </changeSet>

    <changeSet id="pgcn-add-missing-columns-to-lot_lot-table" author="persee">

        <addColumn tableName="lot_lot">
            <column name="omeka_configuration" type="varchar(191)"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="lot_lot" baseColumnNames="omeka_configuration" constraintName="fk_conf_lot_lot"
            referencedTableName="conf_omeka" referencedColumnNames="identifier"/>

    </changeSet>

    <changeSet id="pgcn-add-missing-columns-to-proj_project-table" author="persee">

        <addColumn tableName="proj_project">
            <column name="omeka_configuration" type="varchar(191)"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="proj_project" baseColumnNames="omeka_configuration" constraintName="fk_conf_proj_project"
            referencedTableName="conf_omeka" referencedColumnNames="identifier"/>

    </changeSet>
</databaseChangeLog>
